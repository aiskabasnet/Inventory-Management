<div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-6">

      <div class="page-header">
        <label class="l1">Forgot your password?</label>
      </div>
      <div class="well">
        <%= form_for(resource, as: resource_name,:html => {:class=>"form-horizontal"}, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <label class="control-label">Email</label><br>
    <%= f.email_field :email, autofocus: true ,:class=>"form-control", :placeholder=>"Email" %>
  </div>
<br>
  <div class="actions">
    <div class="row">
      <div class="col-md-8">
        <button class="btn btn-primary" type="submit">Send me reset password instructions
        </button></div>
    </div>
  </div>
<% end %><br>

<%= render "devise/shared/links" %>
        </div></div></div></div>
