
  <% if @company_profile.errors.any? %>
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h5 class="panel-title">
            <%= pluralize(@company_profile.errors.count,"error") %> occured</h5>
        </div>
        <div class="panel-body">
          <ul>
            <% @company_profile.errors.full_messages.each do |e| %>
                <li>
                  <%= e %>
                </li>
            <% end %>
          </ul></div></div>
  <% end %>
