<style>


  h2, p, strong {
    font-family: Lato;
  }

  h2 {
    text-align: center;
  }

  p {
    font-size: 16px;
  }

    .btn{
      font-family: Lato, sans-serif;
      font-size: 16px;
    }

</style>

<div class="row">
  <div class=" col-md-12">
    <h3>View Company Profile</h3>
    <hr>
    <div class="row">
      <div class="col-sm-12">
        <ol class="breadcrumb">
          <li><a href="/">Home</a></li>
          <li>Company Profiles</li>
        </ol>
      </div>
    </div>
    <p class="notice"><%= notice %></p>
    <% if @company_profile.count == 0 %>
        <div class="row">
          <div class="col-sm-12">
        <h3>No records !!</h3></div></div><hr>
        <div class="row">
          <div class="col-sm-2">
        <a class="btn btn-primary btn-block" href="company_profiles/new"><i class="fa fa-plus-circle" aria-hidden="true"> Add New </i></a>
    </div>
    <% end %>
    <% @company_profile.each do |setting| %>


        <div class="row">
          <div class="col-sm-2">

          <a title="Delete" data-method="delete" href="<%= company_profile_path(setting) %>" data-confirm="Are you sure?" data-toggle="tooltip" data-placement="right" class="btn btn-danger btn-block"><i class="fa fa-trash-o fa-fw" aria-hidden="true"></i>Delete</a>
        </div>
        <div class="col-sm-2">
          <a href="<%= edit_company_profile_path(setting) %>">Edit</a>
        </div>
        </div><br>

        <div class="row">
          <div class="col-sm-2">
            <label class="control-label">Name:</label></div>
          <div class="col-sm-10">

            <%= setting.name %></div></div>


          <div class="row">
            <div class="col-sm-2">
              <label class="control-label">  <strong>Address : </strong></label></div>
            <div class="col-sm-10"><%= setting.address %></div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <label class="control-label"> <strong>VDC/Municipality : </strong></label></div>
            <div class="col-sm-10"> <%= setting.vdc_mun %></div></div>
          <div class="row">
            <div class="col-sm-2">
              <label class="control-label"><strong>Ward No. : </strong></label></div>
            <div class="col-sm-10"> <%= setting.ward_no %></div></div>
          <div class="row">
            <div class="col-sm-2">
              <label class="control-label">  <strong>Phone No. : </strong></label></div>
            <div class="col-sm-10">
              <%= setting.phone_number %></div></div>
          <div class="row">
            <div class="col-sm-2">
              <label class="control-label"> <strong>Vat or Pan Number: </strong></label></div>
            <div class="col-sm-10"> <%= setting.vat_pan_no %></div></div>
          <div class="row">
          <div class="col-sm-2">
            <label class="control-label"><strong>District: </strong></label></div>
            <div class="col-sm-10"> <%= setting.district %></div></div>
          <div class="row">
          <div class="col-sm-2">
            <label class="control-label"><strong>Zone: </strong></label></div>
            <div class="col-sm-10"> <%= setting.zone %></div></div>

        <div class="row">
          <div class="col-sm-2">
            <label class="control-label"><strong>logo: </strong></label>
          </div>
        <div class="col-sm-8">
          <a href="<%= setting.logo.url %>" target="_blank"><%= image_tag setting.logo.thumb.url, :class => "aa thumbnail" %></a>
        </div>
        </div></div>
        </div></div>


  <% end %>
    <script>
      $(document).on("ready page:change", function () {
        $('.a').tooltip();
      });
    </script>