
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h3><i class="fa fa-plus fa-fw"></i>Add Customer</h3><hr>
      <div class="row">
        <div class="col-sm-12">
          <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/customers">Customers</a></li>
            <li>Add Customer</li>
          </ol></div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <% if @customer.errors.any? %>

              <div class="panel panel-danger">
                <div class="panel-heading">
                  <h5 class="panel-title">
                    <%= pluralize(@customer.errors.count,"error") %> occured</h5>
                </div>
                <div class="panel-body">
                  <ul>
                    <% @customer.errors.full_messages.each do |e| %>
                        <li>
                          <%= e %>
                        </li>
                    <% end %>
                  </ul></div></div>
          <% end %>
        </div>
      </div>
      <%= render "form" %></div></div></div>
