<div class="container">



  <% if @stock.errors.any? %>

      <div class="alert alert-danger" role="alert">
        <h2>
          <%= pluralize(@stock.errors.count,"error") %> occured
        </h2>
        <ul>
          <% @stock.errors.full_messages.each do |e| %>
              <li>
                <%= e %>
              </li>
          <% end %>
        </ul></div>
  <% end %>

  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h3><i class="fa fa-pencil-square-o fa-fw"></i>Edit Stock</h3><hr>
      <div class="row">
        <div class="col-sm-12">
          <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/stocks">Stocks</a></li>
            <li>Edit Stock</li>
          </ol></div>
      </div>
      <%= render "form" %>
    </div></div></div>