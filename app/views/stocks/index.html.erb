<div class="container">
  <h3>List All Stock</h3><hr>
  <div class="row">
    <div class="col-sm-12">
    <ol class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li>Stocks</li>
    </ol></div>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-12">
    <table class="table table-hover table-responsive">
      <thead>
      <tr>
        <th>S.N.</th>
        <th>Item Name</th>
        <th>Unit</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Estimated Sell Price</th>
        <th>Item Group Name</th>
        <th>Description</th>
      </tr></thead>
      <% @stock.each_with_index do |stock,i| %>
          <tbody>
          <tr>
            <td><%= (@page.to_i - 1) *5+i+1 %></td>
            <td><%= stock.item.name %></td>
            <td><%= stock.item.unit.name %></td>
            <td><%= stock.quantity %></td>
            <td><%= stock.unit_price %></td>
            <td><%= stock.est_sell_price %></td>
            <td><%= stock.item.item_group.name %></td>
            <td><%= stock.item.description %></td>
          </tr></tbody>
      <% end %>
    </table>

    <%= will_paginate @stock, renderer: BootstrapPagination::Rails %>
  </div></div>
</div>
<script>
  $(document).on("ready page:change", function() {
    $('.a').tooltip();
  });
</script>