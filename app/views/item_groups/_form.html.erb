 <%= form_for @item_group, :html => {:class=>"form-horizontal"} do |f| %>
          <div class="form-group">
            <div class="col-md-3">
              <label class="control-label">Name <label class="compulsary">*</label></label></div>
            <div class="col-md-9">
              <%= f.text_field :name, :class=>"form-control",:placeholder=>"Group Name" %></div>
          </div>
          <div class="form-group">
            <div class="col-md-3">
              <label class="control-label">Parent Id</label></div>
            <div class="col-md-9">
              <%= f.collection_select :parent_id, ItemGroup.order(:name),:id, :name, {prompt: "Select Item Group"}, {class:"form-control"} %></div>
          </div>
          <div class="form-group">
            <div class="col-md-3">
              <label class="control-label">Description</label></div>
            <div class="col-md-9">
              <%= f.text_area :description, :class=>"form-control",:placeholder=>"Write short description about your group" %></div>
          </div>
          <div class="row">
            <div class="col-sm-offset-3 col-sm-3">
              <button class="btn btn-primary btn-block btn-lg" type="submit">Submit
              </button></div>
          </div>
      <% end %>