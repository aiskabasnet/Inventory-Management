
<div class="container">


  <% if @sale.errors.any? %>
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h5 class="panel-title">
            <%= pluralize(@sale.errors.count,"error") %> occured</h5>
        </div>
        <div class="panel-body">
          <ul>
            <% @sale.errors.full_messages.each do |e| %>
                <li>
                  <%= e %>
                </li>
            <% end %>
          </ul></div></div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <h3><i class="fa fa-plus fa-fw"></i>Add Sale</h3><hr>
      <div class="row">
        <div class="col-sm-12">
          <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/sales">Sales</a></li>
            <li>Add Sale</li>
          </ol></div>
      </div>
      <%= render "form" %></div></div></div>
