
<%= form_for @supplier, :html => {:class=>"form-horizontal"} do |f| %>
    <div class="form-group">
      <div class="col-md-3">
        <label class="control-label">Name <label class="compulsary">*</label></label></div>
      <div class="col-md-9">
        <%= f.text_field :name, :class=>"form-control",:placeholder=>"Supplier's Name" %></div>
    </div>
    <div class="form-group">
      <div class="col-md-3">
        <label class="control-label">Address</label></div>
      <div class="col-md-9">
        <%= f.text_field :address, :class=>"form-control",:placeholder=>"Address" %></div>
    </div>
    <div class="form-group">
      <div class="col-md-3">
        <label for="" class="control-label">Phone No.</label>
      </div>
      <div class="col-md-9">
        <%= f.phone_field :phone_number, :class=>"form-control", :placeholder=> "Phone Number" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-3">
        <label class="control-label">Email</label></div>
      <div class="col-md-9">
        <%= f.email_field :email, :class=>"form-control",:placeholder=>"Email" %></div>
    </div>

    <div class="row">
      <div class="col-sm-offset-3 col-sm-3">
        <button class="btn btn-primary btn-block btn-lg" type="submit">Submit
        </button></div>
    </div>
<% end %>
